<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.skooltchdev.addressbook.MainActivity">

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="Name:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView1" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView1"
            android:text="Enter your name ....."
            android:ems="10"
            android:id="@+id/editText" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="Phone:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView8" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView8"
            android:text="Enter your phone ....."
            android:ems="10"
            android:id="@+id/editText8" />

    </RelativeLayout>

    <RelativeLayout
            android:padding="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingRight="12dp"
                android:text="Email:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/textView9" />

            <EditText
                android:background="#E3F2FD"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:layout_toRightOf="@id/textView9"
                android:text="Enter your Email ....."
                android:ems="10"
                android:id="@+id/editText9" />




    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="Address Line 1:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView2" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView2"
            android:text="Enter your address ....."
            android:ems="10"
            android:id="@+id/editText2" />


    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="Address Line 2:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView3" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView3"
            android:text="Enter your address ....."
            android:ems="10"
            android:id="@+id/editText3" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="City:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView4" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView4"
            android:text="Enter your city ....."
            android:ems="10"
            android:id="@+id/editText4" />


    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="State/Province:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView5" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView5"
            android:text="Enter your State/Province..."
            android:ems="10"
            android:id="@+id/editText5" />


    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="Zip/Postal Code:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView6" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView6"
            android:text="Enter your zip/postal code:"
            android:ems="10"
            android:id="@+id/editText6" />


    </RelativeLayout>

    <RelativeLayout
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="12dp"
            android:text="Country:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView7" />

        <EditText
            android:background="#E3F2FD"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/textView7"
            android:text="Enter your country ..."
            android:ems="10"
            android:id="@+id/editText7" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <Button
            android:background="#3F51B5"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Add to Contacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:background="#3F51B5"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="View Contacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
